# App
APP_NAME=Scotelaro
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Sao_Paulo
APP_URL=http://localhost
APP_LOCALE=pt_BR

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=scotelaro
DB_USERNAME=scotelaro
DB_PASSWORD=scotelaropass

# Cache, filesystem, queue (database driver; add REDIS_*, AWS_* when switching)
CACHE_STORE=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Mail (log driver; set MAIL_MAILER=smtp and MAIL_HOST/... when sending mail)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
